@page
@model TimetableGeneratorFrontend.Pages.UploadModel
@{
    ViewData["Title"] = "Upload";
}

<section>
    <form>
        <div class="form-group">
            <label for="schoolName">School Name:</label>
            <input type="text" class="form-control" id="schoolName" aria-describedby="schoolNameHelp" placeholder="e.g. The Hayfield School">
            <small id="schoolNameHelp" class="form-text text-muted">This will be used to identify your specific timetable.</small>
        </div>
        <div class="form-group">
            <label for="yearGroups">Year Groups:</label>
            <select class="form-control" id="yearGroups" multiple>
                <option id="0">Reception</option>
                <option id="1">Year 1</option>
                <option id="2">Year 2</option>
                <option id="3">Year 3</option>
                <option id="4">Year 4</option>
                <option id="5">Year 5</option>
                <option id="6">Year 6</option>
                <option id="7">Year 7</option>
                <option id="8">Year 8</option>
                <option id="9">Year 9</option>
                <option id="10">Year 10</option>
                <option id="11">Year 11</option>
                <option id="12">Year 12</option>
                <option id="13">Year 13</option>
            </select>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="isMultiWeekTimetable">
            <label class="form-check-label" for="isMultiWeekTimetable">Select if the timetable is not the same every week</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</section>